{
    "plugins": {
        "@release-it/conventional-changelog": {
            "infile": "CHANGELOG.md"
        }
    },
    "git": {
        "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
        "requireCleanWorkingDir": true,
        "requireBranch": false,
        "requireUpstream": false,
        "requireCommits": false,
        "addUntrackedFiles": false,
        "commit": true,
        "commitMessage": "[ci skip] new version released ${version}",
        "commitArgs": [],
        "tag": true,
        "tagName": "v${version}",
        "tagAnnotation": "Release v${version}",
        "tagArgs": [],
        "push": true
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "releaseNotes": "Notes for ${version} ${changelog}",
        "releaseName": "Release v${version}",
        "tokenRef": "GITHUB_TOKEN"
    },
    "gitlab": {
        "release": false
    }
}